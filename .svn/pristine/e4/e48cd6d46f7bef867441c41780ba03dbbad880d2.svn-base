                   select r;
        }

        public IQueryable<FG_DEPARTMENT_VW> SalesDepartments()
        {
            return from d in FG_DEPARTMENT_VW
                   where d.SETID == SalesSetid
                   select d;
        }

        public IQueryable<FG_PROD_IMAGE_SET> SalesProdImageSets()
        {
            return from m in FG_PROD_IMAGE_SET
